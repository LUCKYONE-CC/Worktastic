@model Worktastic.Models.JobPosting
@{
    ViewData["Title"] = "Erstellen oder bearbeiten";
}

<form asp-controller="JobPosting" asp-action="CreateEditJob" enctype="multipart/form-data">

    <div class="card">
        <div class="card-header">
            <h5>Inserat bearbeiten</h5>
        </div>

        <div class="card-body">

            <h4>Bewerberinformationen</h4>

            <input hidden asp-for="Id" />

            <div class="row form-group">
                <div class="col">
                    <input class="form-control" asp-for="JobTitle" type="text" placeholder="Jobbezeichnung"/>
                </div>
                <div class="col">
                    <input class="form-control" asp-for="JobLocation" type="text" placeholder="Ort"/>
                </div>
            </div>

            <div class="row form-group">
                <div class="col">
                    <input class="form-control" asp-for="Salary" type="number" placeholder="Jahresgehalt in Euro"/>
                </div>
            </div>

            <div class="row form-group">
                <div class="col-6">
                       <div class="col-form-label">
                          Startdatum
                       </div>
                        <input class="form-control" asp-for="StartDate" type="date"/>
                    </div>
                </div>

                <hr />

            <h4>Firmeninformationen</h4>

            <div class="row form-group">
                <div class="col">
                    <input class="form-control" asp-for="CompanyName" type="text" placeholder="Firmenname"/>
                </div>
                <div class="col">
                    <input class="form-control" asp-for="ContactWebsite" type="url" placeholder="Webseite"/>
                </div>
            </div>

            <div class="row form-group">
                <div class="col">
                    <input class="form-control" asp-for="ContactPhone" type="tel" placeholder="Tel.;"/>
                </div>
                <div class="col">
                    <input class="form-control" asp-for="ContactMail" type="email" placeholder="E-Mail"/>
                </div>
            </div>

            <div class="row form-group">
                <div class="col">
                    <textarea rows="6" class="form-control" asp-for="Description" placeholder="Jobbeschreibung"></textarea>
                </div>
            </div>

            <div class="row form-group">
                <div class="col">
                    <h5>Firmenlogo</h5>
                    <input class="form-control-file" name="file" type="file"/>
                </div>
            </div>

            </div>
        </div>

        <div class="card-footer">
            <button class="btn btn-primary" type="submit">Speichern</button>
        </div>
</form>